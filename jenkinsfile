pipeline {
    agent any

    stages {
        stage('w/o docker') {
            steps {
                sh 'echo "without docker"'
                sh "touch man"
                sh 'ls -al'
            }
        }
        stage('w docker') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh 'echo "with docker"'
                sh 'npm --version'
                sh "touch man"
                sh 'ls -al'
            }
        }
    }
}
